<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.amg.web.mapper.ProductMapper">
    <insert id="insertProduct" parameterType="com.amg.web.domain.ProductDTO">
      insert into PRODUCTS (PRODUCT_ID,PRODUCT_NAME,SUPPLIER_ID,CATEGORY_ID,UNIT,PRICE)
     values (#{productId},#{productName},#{supplierId},#{categoryId},#{unit},#{price})
    </insert>
     
  <select id="selectProducts" resultType="com.amg.web.domain.ProductDTO">
    select * from PRODUCTS 
  </select>
  <!-- 아이디만 아니면 됨. option은 임의로 박아놓음 -->
    <select id="selectProductsByOption" resultType="com.amg.web.domain.ProductDTO"
                                            parameterType="com.amg.web.domain.ProductDTO">
    select * from PRODUCTS where PRODUCT_NAME = #{productName} 
  </select>
    <select id="selectProductsByProductId" resultType="com.amg.web.domain.ProductDTO"
                                            parameterType="string">
    select * from PRODUCTS where PRODUCT_ID = #{value}
  </select>
<update
  id="updateProduct" parameterType="com.amg.web.domain.ProductDTO">
    update PRODUCTS set
        PRODUCT_ID = #{productId},
        PRODUCT_NAME = #{productName},
        SUPPLIER_ID = #{supplierId},
        CATEGORY_ID = #{categoryId},
        UNIT = #{unit},
        PRICE = #{price}
    where PRODUCT_ID = #{productId}
  </update>

<delete
  id="deleteProduct" parameterType="com.amg.web.domain.ProductDTO">
     delete from PRODUCTS where PRODUCT_ID = #{productId}
</delete>

</mapper>